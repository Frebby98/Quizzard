<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background='#fff'
    tools:context="com.example.android.quizzard.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:hint="@string/name_hint"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#42a5f5"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/q1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/questions_corners"
            android:gravity="center"
            android:text="@string/question_one"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="italic"
            android:padding="8dp"/>

        <RadioGroup
            android:id="@+id/radio_group_question_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/options_corners">

            <RadioButton
                android:id="@+id/radio_1918"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_one_option_one"
                android:textColor="#000000"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radio_1912"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_one_option_two"
                android:textColor="#000000"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radio_1914"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_one_option_three"
                android:textColor="#000000"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radio_1939"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_one_option_four"
                android:textColor="#000000"
                android:textSize="14sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/q2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/questions_corners"
            android:gravity="center"
            android:text="@string/question_two"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="italic"
            android:padding="8dp"/>

        <LinearLayout
            android:id="@+id/q2_checker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/options_corners"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/great_divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_two_option_one"
                android:textColor="#000000"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/hanging_garden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_two_option_two"
                android:textColor="#000000"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/light_house"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_two_option_three"
                android:textColor="#000000"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/colossus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_two_option_four"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/q3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/questions_corners"
            android:gravity="center"
            android:text="@string/question_three"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp"/>

        <RadioGroup
            android:id="@+id/radio_group_question_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/options_corners"

            >

            <RadioButton
                android:id="@+id/radio_132"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_three_option_one"
                android:textColor="#000000"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radio_53"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_three_option_two"
                android:textColor="#000000"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radio_98"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_three_option_three"
                android:textColor="#000000"
                android:textSize="14sp"

                />

            <RadioButton

                android:id="@+id/radio_54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_three_option_four"
                android:textColor="#000000"
                android:textSize="14sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/q4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/questions_corners"
            android:gravity="center"
            android:text="@string/question_four"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="italic"
            android:padding="8dp"/>

        <RadioGroup
            android:id="@+id/radio_group_question_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/options_corners">

            <RadioButton
                android:id="@+id/radio_mars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_four_option_one"
                android:textColor="#000000"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radio_earth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
