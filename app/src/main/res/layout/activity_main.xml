                android:text="@string/question_four_option_three"
                android:textColor="#000000"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radio_jupiter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_four_option_four"
                android:textColor="#000000"
                android:textSize="14sp" />

        </RadioGroup>


        <TextView
            android:id="@+id/q5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/questions_corners"
            android:gravity="center"
            android:text="@string/question_five"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="italic"
            android:padding="8dp"/>

        <RadioGroup
            android:id="@+id/radio_group_question_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/options_corners">

            <RadioButton
                android:id="@+id/miss_khalifa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_five_option_one"
                android:textColor="#000000"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/wiz_khalifa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_five_option_two"
                android:textColor="#000000"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/the_khalifa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_five_option_three"
                android:textColor="#000000"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/burj_khalifa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_five_option_four"
                android:textColor="#000000"
                android:textSize="14sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/q6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/questions_corners"
            android:gravity="center"
            android:text="@string/question_six"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="italic"
            android:padding="8dp"/>

        <LinearLayout
            android:id="@+id/q6_checker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/options_corners"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/radio_nigeria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_six_option_one"
                android:textColor="#000000"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/radio_asia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_six_option_two"
                android:textColor="#000000"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/radio_north"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_six_option_three"
                android:textColor="#000000"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/radio_europe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_six_option_four"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/q7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edit_questions_corners"
            android:gravity="center"
            android:text="@string/question_seven"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="italic"
            android:padding="8dp"/>

        <EditText
            android:id="@+id/edit_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:hint="@string/q7_hint"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="@color/colorAccent"
            android:textSize="18sp" />
        <Button
            android:id="@+id/q7_hint_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="q7HintButton"
            android:text="@string/q7_hint_button_text"
            android:layout_gravity="center"
            android:background="@drawable/hint_corners"
            android:textColor="#fff"
            />

        <TextView
            android:id="@+id/q8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edit_questions_corners"
            android:gravity="center"
            android:text="@string/question_eight"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="italic"
            android:padding="8dp"/>

        <EditText
            android:id="@+id/edit_war"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:gravity="center"
            android:hint="@string/q8_hint"
            android:inputType="number"
            android:textColor="#000000"
            android:textColorHint="@color/colorAccent"
            android:textSize="18sp" />
        <Button
            android:id="@+id/q8_hint_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="q8HintButton"
            android:text="@string/q8_hint_button_text"
            android:layout_gravity="center"
            android:background="@drawable/hint_corners"
            android:textColor="#fff"

            />

        <TextView
            android:id="@+id/q9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/questions_corners"
            android:gravity="center"
            android:text="@string/question_nine"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="italic"
            android:padding="8dp"/>


        <LinearLayout
            android:id="@+id/q9_checker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/options_corners"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/radio_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/question_nine_option_one"
                android:textColor="#000000"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/radio_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_nine_option_two"
                android:textColor="#000000"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/radio_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_nine_option_three"
                android:textColor="#000000"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/radio_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/question_nine_option_four"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/q10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edit_questions_corners"
            android:gravity="center"
            android:text="@string/question_ten"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="italic"
            android:padding="8dp"/>

        <EditText
            android:id="@+id/edit_sport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="32dp"
            android:inputType="text"
            android:textColor="#000000"
            android:textSize="18sp"
            android:hint="@string/q10_hint"
            android:gravity="center"
            android:textColorHint="#2962ff"/>

        <Button
            android:id="@+id/q10_hint_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
