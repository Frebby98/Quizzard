            android:text="@string/q10_hint_button_text"
            android:background="@drawable/hint_corners"
            android:layout_gravity="center"
            android:textColor="#fff"
            />

        <Button
            android:id="@+id/submit_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/submit_corners"
            android:onClick="onSubmitClicked"
            android:text="@string/submit_text"
            android:textColor="#FFFFFFFF"
            android:gravity="center" />
        <Button
            android:id="@+id/reset_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/reset_corners"
            android:onClick="onResetButtonClicked"
            android:text="@string/reset_text"
            android:textColor="#FFFFFFFF"
            />
